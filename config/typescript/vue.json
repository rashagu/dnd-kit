{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Vue",
  "extends": "./base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "jsxImportSource": "vue",
    "lib": ["dom", "ES2015"],
    "target": "es6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "importHelpers": true
  }
}
